<html>
<title>Đăng ký</title>
<link rel="shortcut icon" type="image/png" href=".././logo/logoDOAN.jpg">
<div class="wrapper fadeInDown">
    <div id="formContent">
        <!-- Tabs Titles -->
        <a href="/auth/signin">
            <h2 class="inactive underlineHover">Đăng nhập</h2>
        </a>

        <a href="/auth/signup">
            <h2 class="active">Đăng kí</h2>
        </a>

        <!-- Icon -->
        <div class="fadeIn first">
            <img src=".././logo/logoDOAN.jpg" width="200px" height="150px">
        </div>

        <!-- Login Form -->
        <%- include('./../../partials/alert.ejs') %>
            <form action="/auth/signup" method="post">
                <input type="text" class="fadeIn third" name="name" placeholder="Họ và tên" required />
                <input type="text" class="fadeIn second" name="mobile" placeholder="Số điện thoại" required />
                <input type="email" class="fadeIn third" name="email" placeholder="Email" required />
                <input type="password" class="fadeIn third" name="pass" placeholder="Mật khẩu" required />
                <!-- submit không cần link khi trong form -->
                <input type="submit" class="fadeIn fourth" value="Đăng kí" />
            </form>

            <!-- Remind Passowrd -->
            <div id="formFooter">
                <p>Bạn đã có tài khoản?</p>
                <a class="underlineHover" href="/auth/signin"> Đăng nhập tại đây</a>
            </div>
    </div>
</div>

